---
import Layout from "../layouts/Layouts.astro";
---

<Layout>
    <main class="max-w-4xl mx-auto p-6">
        <h1 class="text-4xl font-bold text-center mb-8">
            Welcome to firefly with Firebase
        </h1>

        <div class="grid md:grid-cols-3 gap-8">
            <section>
                <h2 class="text-2xl font-semibold mb-4">Use Cases</h2>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/use-cases/best-way-to-organize-notes"
                            class="text-blue-600 hover:underline"
                            >Organize Notes Without Folders</a
                        >
                    </li>
                    <li>
                        <a
                            href="/use-cases/save-youtube-ideas"
                            class="text-blue-600 hover:underline"
                            >Save YouTube Video Ideas</a
                        >
                    </li>
                    <li>
                        <a
                            href="/use-cases/manage-client-files"
                            class="text-blue-600 hover:underline"
                            >Manage Client Files</a
                        >
                    </li>
                </ul>
            </section>

            <section>
                <h2 class="text-2xl font-semibold mb-4">Comparisons</h2>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/compare/notion-vs-firefly"
                            class="text-blue-600 hover:underline"
                            >Notion vs firefly</a
                        >
                    </li>
                    <li>
                        <a
                            href="/compare/evernote-vs-firefly"
                            class="text-blue-600 hover:underline"
                            >Evernote vs firefly</a
                        >
                    </li>
                    <li>
                        <a
                            href="/compare/obsidian-vs-firefly"
                            class="text-blue-600 hover:underline"
                            >Obsidian vs firefly</a
                        >
                    </li>
                </ul>
            </section>

            <section>
                <h2 class="text-2xl font-semibold mb-4">AI Features</h2>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/ai/ai-summarize-meetings"
                            class="text-blue-600 hover:underline"
                            >AI Meeting Summaries</a
                        >
                    </li>
                    <li>
                        <a
                            href="/ai/ai-auto-tag-content"
                            class="text-blue-600 hover:underline"
                            >AI Auto-Tagging</a
                        >
                    </li>
                    <li>
                        <a
                            href="/ai/ai-instant-search"
                            class="text-blue-600 hover:underline"
                            >AI Instant Search</a
                        >
                    </li>
                </ul>
            </section>
        </div>
    </main>
</Layout>
